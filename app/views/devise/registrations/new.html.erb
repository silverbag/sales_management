<%= render "shared/header" %>
<%= form_with(model: @user,url: "/users", local: true, class: 'registration-main') do |f| %>
<div class="box">
  <div class="box-inner">
      <h1>アカウント登録</h1>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="box-email">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autocomplete: "name" %>
      </div>
      
      <div class="box-email">
        <%= f.label :position, "役職" %><br />
        <%= f.text_field :position, autocomplete: "position" %>
      </div>


      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "確認用パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "新規登録" %>
        <div class="legal-text">
          続行することで、sales_managementの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
      </div>
  </div>
</div>

<% end %>

